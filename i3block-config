# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=$SCRIPT_DIR/$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

[cpu_util_detailed]
markup=pango
interval=-2
report_time=1
stats=usr sys
format=%6.2f
warn=80
usr_color=#4DB6AC
sys_color=#fa8072
min_width=11.11 11.11
align=center

[load_average]
label=LOAD 
interval=10

[memory]
label=RAM 
interval=30

[memory]
label=SWAP 
instance=swap
interval=30

[temperature]
label=TEMP 
interval=10
T_WARN=70
T_CRIT=90

[disk]
#DIR=$HOME
ALERT_LOW=10
interval=30

[brightness]
command=printf "%s %s\n" "$(echo -e "\u2600")" "$(xrandr --verbose | grep -i brightness | cut -f2 -d ' ' | head -n1)"
color=#ffa500
interval=once
signal=13

[volume-pulseaudio]
interval=once
signal=1
DEFAULT_COLOR="#ffffff"
MUTED_COLOR="#dc322f"
AUDIO_HIGH_SYMBOL= 
AUDIO_MED_THRESH=50
AUDIO_MED_SYMBOL= 
AUDIO_LOW_THRESH=0
AUDIO_LOW_SYMBOL=
LONG_FORMAT="${SYMB} ${VOL}%"
SHORT_FORMAT="${SYMB} ${VOL}%"
# min_width=######

[dunst]
interval=once
format=json
markup=pango
min_width=18
align=center
#DUNST_MUTE=off

[nm-vpn]
#init_color=#FFFF00
#on_color=#00FF00
label=VPN
interval=5
signal=14

[time]
command=date '+%d.%m %H:%M'
interval=5


